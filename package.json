{
  "name": "owlbear-safety-card",
  "version": "1.0.0",
  "description": "Safety Overlay - extensi√≥n de seguridad para Owlbear Rodeo (X-Card, Pause, Rewind)",
  "type": "module",
  "scripts": {
    "dev": "python -m http.server 8000",
    "serve": "npx http-server -p 8000 -c-1",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "owlbear",
    "safety",
    "x-card",
    "extension",
    "ttrpg"
  ],
  "author": "Lole",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleNameMapper": {
      "^https://esm.sh/(.*)$": "<rootDir>/tests/mocks/obr-sdk.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/mocks/setup.js"
    ]
  }
